<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Fragments.PerfilFragment">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/mujer"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="20dp"/>

    <TextView
        android:id="@+id/nombreUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estela Alvarez"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/gris"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/btn_actividad"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppinsregular"
        android:text="@string/tu_actividad_hoy"
        android:textAllCaps="false"
        android:textColor="@color/gris"
        android:textSize="18sp" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_marginVertical="20dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calorias consumidas en la semana"
        android:textSize="18dp"
        android:fontFamily="@font/poppinsregular"
        android:gravity="center_horizontal"
        android:textColor="@color/naranja_cafe"
        />

    <Button
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:textAllCaps="false"
        android:text="@string/alimento"
        android:textColor="@color/rojo"
        android:textSize="18sp"
        android:fontFamily="@font/poppinsregular"
        android:layout_gravity="center_horizontal" />


    <Button
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/ejercicio"
        android:textColor="@color/rojo"
        android:textSize="18sp"
        android:fontFamily="@font/poppinsregular"
        android:layout_gravity="center_horizontal"
        />


</LinearLayout>