<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".AgregarComida">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_comida"
        android:layout_marginTop="50dp"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_gravity="center_horizontal"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_agregarcomida"
        android:layout_width="35dp"
        android:layout_marginTop="20dp"
        android:layout_height="35dp"
        android:background="@drawable/agregar"
        android:layout_gravity="center_horizontal"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Como se llama tu alimento?"
        android:layout_marginTop= "15dp"
        android:fontFamily="@font/poppinslight"
        android:textSize="15sp"
        android:textColor="@color/naranja_cafe"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:paddingVertical="5dp"
        android:gravity="center"
        android:textSize="15sp"
        android:textColorHint="@color/gris"
        android:fontFamily="@font/poppinsregular"
        android:background="@drawable/background_gris"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinslight"
        android:text="¿A que racion pertenece?"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="10dp"
        android:textColor="@color/naranja_cafe"
        android:textSize="15sp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <RadioButton
            android:id="@+id/rddesayuno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gris"
            android:fontFamily="@font/poppinslight"
            android:text="Desayuno"
            />

        <RadioButton
            android:id="@+id/rdmerienda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Merienda"
            android:layout_marginLeft="15dp"
            android:textColor="@color/gris"
            android:fontFamily="@font/poppinslight"/>

        <RadioButton
            android:id="@+id/rdcomida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comida"
            android:layout_marginLeft="15dp"
            android:textColor="@color/gris"
            android:fontFamily="@font/poppinslight"/>

    </RadioGroup>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginVertical="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cuantas calorias contiene esta platillo?"
        android:fontFamily="@font/poppinslight"
        android:textSize="15sp"
        android:textColor="@color/naranja_cafe"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:paddingVertical="5dp"
        android:gravity="center"
        android:textSize="15sp"
        android:inputType="number"
        android:fontFamily="@font/poppinsregular"
        android:background="@drawable/background_gris"
        android:textColorHint="@color/gris"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:layout_marginVertical="2dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/verde_claro"
        android:fontFamily="@font/poppinsbold"/>




</LinearLayout>