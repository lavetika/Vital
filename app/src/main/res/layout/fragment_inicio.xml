<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.InicioFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:background="@drawable/background_rojo"
            android:paddingHorizontal="40dp"
            android:paddingVertical="13dp"
            android:text="69 kg"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView

            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_naranja"
            android:paddingHorizontal="40dp"
            android:paddingVertical="13dp"
            android:text="64 kg"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textView11"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="@+id/textVie4"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView

            android:id="@+id/textVie4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_verde"
            android:paddingHorizontal="40dp"
            android:paddingVertical="13dp"
            android:text="64 kg"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView11"
            app:layout_constraintHorizontal_bias="0.256"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ideal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/actual"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView12"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/recomendados"
                android:layout_width="85dp"
                android:layout_height="85dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="@string/recomendaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="80dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/favoritos"
                android:layout_width="85dp"
                android:layout_height="85dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="@string/favoritos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rojo"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="5dp"
        android:paddingVertical="15dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Lunes 29 de marzo 2021" />

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginStart="30dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:background="@drawable/background_verde"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:text="@string/desayuno"/>
            <TextView
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:background="@drawable/background_verde"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:text="@string/merienda"/>

            <TextView
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:background="@drawable/background_verde"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:text="@string/comida"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <GridView
                android:layout_width="157dp"
                android:layout_height="wrap_content" >

            </GridView>

            <LinearLayout
                android:layout_marginEnd="30dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:background="@drawable/eliminar"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="50dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:background="@drawable/eliminar"
                    android:layout_marginBottom="50dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:background="@drawable/eliminar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/agregar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/agregar_comida"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_naranja"
                android:paddingHorizontal="30dp"
                android:paddingVertical="5dp"
                android:text="240"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_calorias"
                android:textAlignment="center"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>